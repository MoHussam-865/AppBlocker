<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/chooseAppsFragment"
        android:name="com.android_a865.appblocker.feature_choose_apps.presentation.ChooseAppsFragment"
        android:label="fragment_choose_apps"
        tools:layout="@layout/fragment_choose_apps" >
        <argument
            android:name="app_pkg"
            app:argType="com.android_a865.appblocker.feature_home.domain.AppsPackage"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="pkg_name"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.android_a865.appblocker.feature_home.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_chooseAppsFragment"
            app:destination="@id/chooseAppsFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.android_a865.appblocker.feature_Splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_chooseAppsFragment"
            app:destination="@id/chooseAppsFragment" />
    </fragment>
</navigation>